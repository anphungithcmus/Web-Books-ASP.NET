@using Webbansach.Models;
@model List<Sach>
<h1 class="item-header">Sách mới</h1>
@{
    foreach (var item in Model)
    {
        <div class="activity-list-update">
            <img src="@Url.Content("~/imgProduct/"+item.AnhBia)" width="50" height="50" alt="Image">
            @*Nếu tên sách dài hơn 30 ký tự thì chúng ta sẽ cắt tên sách ra lấy từ ký tự 0 đến ký tự 35*@
            @if (item.TenSach.Length > 30)
            {
                <p><strong title="@item.TenSach">Tiêu đề: @item.TenSach.Substring(0, 30)...</strong><br /><a href="@Url.Action("XemChiTiet","Sach", new { @masach=item.MaSach })">Xem chi tiết</a></p>
            }
            else
            {
                <p><strong title="@item.TenSach">Tiêu đề: @item.TenSach</strong><br /><a href="@Url.Action("XemChiTiet","Sach", new { @masach=item.MaSach })">Xem chi tiết</a></p>
                <div class="clear"></div>
            }

        </div> }
}
<a href="#" class="item-footer green">
    Xem tất cả
</a>


